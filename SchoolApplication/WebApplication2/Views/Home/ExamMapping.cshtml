@model WebApplication2.Models.MappingModel
<title>ExamMapping</title>


<div class="container">
    @using (Html.BeginForm())
    {
        <form>
            <div class="form-row">
                <div class="form-group col-md-6 ">

                    <div class="form-group col-md-6 ">
                        @Html.LabelFor(x => x.exam)

                        @Html.DropDownListFor(x => x.exam, Model.examlist, new { @class = "form-control" })

                    </div>
                </div>


                <div class="form-group col-md-6 ">

                    <div class="form-group col-md-6 ">
                        @Html.LabelFor(x => x.Classes)

                        @Html.DropDownListFor(x => x.Classes, Model.classlist, new { @class = "form-control", multiple = "multiple", id = "classes" })

                    </div>

                </div>

                <div class="form-group col-md-6">

                    <input type="submit" class="btn btn-primary" value="Submit" />
                </div>
            </div>
        </form>
    }
    <table id="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("S.No")

                </th>


                <th>
                    @Html.DisplayName("Exam")

                </th>

                <th>
                    @Html.DisplayName("Class")

                </th>
            </tr>

        </thead>
        <tbody>
            @if (Model.EMlist != null)
            {
                foreach (var item in Model.EMlist)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.emid)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.exam.examname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.@class.classname)
                        </td>

                    </tr>
                }
            }
            
        </tbody>
    </table>

</div>

@section Scripts{

    <link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.13/css/bootstrap-multiselect.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.13/js/bootstrap-multiselect.js"></script>


}
<script src="~/Scripts/jquery-3.5.0.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $("#table").DataTable();
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

@if (TempData["SubjectMapping"] != null)
{


    <script type="text/javascript">



        Swal.fire({
            title: 'Subject Mapped Successfully',

            icon: 'success'
        })

    </script>
}


<script type="text/javascript">
    $(document).ready(function () {
        $('#classes').multiselect({
            enableFiltering: true,
            includeSelectAllOption: true,



        });

    });

</script>